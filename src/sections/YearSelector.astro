---
export interface Props {
  years: string[];
  selectedYear: string;
}

const { years, selectedYear } = Astro.props;
---

<select
  id="year-selector"
  class="px-6 py-2 text-lg font-medium text-white
         border-2 border-white rounded-lg bg-gradient-to-r from-gray-900 to-black
         outline-none cursor-pointer transition-all duration-300
         hover:shadow-lg hover:shadow-white hover:scale-105 hover:select-none"
>
  {
    years.map((year) => (
      <option
        value={year}
        selected={year === selectedYear}
        class="select-none text-black bg-gradient-to-tr from-gray-200 to-gray-900"
      >
        {year}
      </option>
    ))
  }
</select>
