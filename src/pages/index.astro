  /* Hide content during redirect for better UX */
  .redirecting {
    opacity: 0.5;
    pointer-events: none;
  }
</style>

<script>
  // Instant redirect for users, SEO content for bots
  (function() {
    // Simple bot detection
    const userAgent = navigator.userAgent.toLowerCase();
    const isBot = /bot|crawler|spider|crawling|googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot|facebookexternalhit|twitterbot|rogerbot|linkedinbot|embedly|quora link preview|showyoubot|outbrain|pinterest\/0|developers\.google\.com\/\+\/web\/snippet/i.test(userAgent);
    
    // Skip redirect for bots, testing, or if user already interacted
    if (isBot || 
        window.location.search.includes('no-redirect') || 
        sessionStorage.getItem('user-interacted')) {
      return;
    }
    
    // For real users: instant redirect
    if (window.location.pathname === '/') {
      // Show loading message immediately
      const redirectMessage = document.getElementById('redirect-message');
      if (redirectMessage) {
        redirectMessage.classList.remove('hidden');
      }
      
      // Immediate redirect (no delay for users)
      window.location.replace('/user/2025');
    }
  })();
  
  // Track user interactions for future visits
  document.addEventListener('DOMContentLoaded', function() {
    ['click', 'scroll', 'keydown', 'touchstart'].forEach(event => {
      document.addEventListener(event, function() {
        sessionStorage.setItem('user-interacted', 'true');
      }, { once: true });
    });
  });
</script>
